<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNotificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="PENGINGAT HARIAN ANDA"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchVitaminReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aktifkan Pengingat Harian Untuk Vitamin"
            android:padding="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchDrinkReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Aktifkan Pengingat Harian Untuk Minum Air"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
